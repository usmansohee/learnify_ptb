<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.learnify.ptb.fragments.HomeFragment"
        android:label="Home">
        <action
            android:id="@+id/action_home_to_subjects"
            app:destination="@id/subjectsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/subjectsFragment"
        android:name="com.learnify.ptb.fragments.SubjectsFragment"
        android:label="Subjects">
        <action
            android:id="@+id/action_subjects_to_chapter_wise_units"
            app:destination="@id/chapterWiseUnitsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <!-- New Chapter-wise Units Fragment -->
    <fragment
        android:id="@+id/chapterWiseUnitsFragment"
        android:name="com.learnify.ptb.fragments.ChapterWiseUnitsFragment"
        android:label="Chapter-wise Units">
        <action
            android:id="@+id/action_chapter_wise_units_to_chapter_files"
            app:destination="@id/chapterFilesFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <!-- New Chapter Files Fragment -->
    <fragment
        android:id="@+id/chapterFilesFragment"
        android:name="com.learnify.ptb.fragments.ChapterFilesFragment"
        android:label="Chapter Files">
        <action
            android:id="@+id/action_chapter_files_to_reading"
            app:destination="@id/readingFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/readingFragment"
        android:name="com.learnify.ptb.fragments.ReadingFragment"
        android:label="Reading" />

</navigation>